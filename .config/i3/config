# i3 config file (v4)
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# #---Basic Definitions---# #
#Mod1=<Alt>, Mod4=<Super>
set $mod Mod1
set $term alacritty
# #---End---# #

# #---Default Config---# #
# ref: https://gist.github.com/lirenlin/9892945?permalink_comment_id=4312849#gistcomment-4312849
font xft:URWGothic-Book 11
workspace_layout tabbed
default_border pixel 1
default_floating_border normal
# for_window [class="^.*"] border pixel 1
hide_edge_borders smart
floating_modifier $mod
title_align center
focus_wrapping workspace
focus_follows_mouse no
focus_on_window_activation urgent
workspace_auto_back_and_forth no
# #---End---# #

# #---Dropdown/Scratchpad Windows---# #
for_window [title="dropdown_tmux"] move scratchpad
for_window [title="dropdown_tmux"] move scratchpad
for_window [title="dropdown_tmux"] sticky enable
for_window [title="dropdown_tmux"] resize set 900 520
# #---End---# #

# #---Basic Key Bindings---# #
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+Ctrl+plus move scratchpad
bindsym $mod+Ctrl+minus scratchpad show
# #---End---# #

# #---Letter Key Bindings---# #
bindsym $mod+q kill
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+n focus parent
bindsym $mod+s split h
bindsym $mod+x split v
bindsym $mod+z layout tabbed
bindsym $mod+y [urgent=latest] focus
bindsym $mod+b workspace back_and_forth

bindsym $mod+Shift+r reload
bindsym $mod+Ctrl+r restart

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+n focus child
bindsym $mod+Shift+z layout toggle split
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

bindsym $mod+Ctrl+f fullscreen toggle
bindsym $mod+Ctrl+b move container to workspace back_and_forth

bindsym $mod+Ctrl+Shift+h exec --no-startup-id i3resize left
bindsym $mod+Ctrl+Shift+j exec --no-startup-id i3resize down
bindsym $mod+Ctrl+Shift+k exec --no-startup-id i3resize up
bindsym $mod+Ctrl+Shift+l exec --no-startup-id i3resize right

#---Application---#
bindsym $mod+d exec $term
bindsym $mod+v exec rofi -show emoji -modi emoji
bindsym $mod+m exec rofisearch

bindsym $mod+Shift+x [title="dropdown_tmux"] scratchpad show; [title="dropdown_tmux"] move position center
bindsym $mod+Shift+y exec google-chrome-stable --new-window https://github.com/settings/tokens
bindsym $mod+Shift+q exec qutebrowser

bindsym $mod+Ctrl+n exec docsmenu
bindsym $mod+Ctrl+c exec $term -t btop -e btop
bindsym $mod+Ctrl+z exec timeshift-launcher
bindsym $mod+Ctrl+w exec google-chrome-stable
bindsym $mod+Ctrl+q exec qutebrowser --target private-window
bindsym $mod+Ctrl+a exec --no-startup-id rofi -show combi
bindsym $mod+Ctrl+s --release exec --no-startup-id flameshot gui
# bindsym $mod+Ctrl+s --release exec --no-startup-id flameshot screen -r -c
# bindsym $mod+Ctrl+s --release exec --no-startup-id flameshot screen -r -p $HOME/pictures/

bindsym $mod+Ctrl+Shift+n exec google-chrome-stable --incognito
bindsym $mod+Ctrl+Shift+b exec xdg-open https://github.com/bruhtus?tab=repositories
bindsym $mod+Ctrl+Shift+u exec --no-startup-id pomo pause && pomo stop
bindsym $mod+Ctrl+Shift+space exec --no-startup-id pomo pause

bindsym $mod+Ctrl+space exec dunstctl close-all
bindsym Ctrl+Shift+space exec dunstctl history-pop
#---End---#
# #---End---# #

# Workspace names
# to display names or symbols instead of plain workspace numbers you can use
# something like: set $ws1 1:mail
#                 set $ws2 2:ï‚¬
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5
set $ws6 6
set $ws7 7
set $ws8 8
set $ws9 9
set $ws10 10

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+Return workspace $ws10

# Move focused container to workspace
bindsym $mod+Ctrl+1 move container to workspace $ws1
bindsym $mod+Ctrl+2 move container to workspace $ws2
bindsym $mod+Ctrl+3 move container to workspace $ws3
bindsym $mod+Ctrl+4 move container to workspace $ws4
bindsym $mod+Ctrl+5 move container to workspace $ws5
bindsym $mod+Ctrl+6 move container to workspace $ws6
bindsym $mod+Ctrl+7 move container to workspace $ws7
bindsym $mod+Ctrl+8 move container to workspace $ws8
bindsym $mod+Ctrl+9 move container to workspace $ws9
bindsym $mod+Ctrl+Return move container to workspace $ws10

# Move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+Return move container to workspace $ws10; workspace $ws10

# Open applications on specific workspaces
# ref: https://unix.stackexchange.com/a/363848
assign [title="btop"] $ws1
assign [class="Alacritty" title="^(?!dropdown_)\w*$"] $ws10
assign [class="Google-chrome"] $ws2
assign [class="qutebrowser"] $ws2
assign [class="Slack"] $ws3
assign [class="TelegramDesktop"] $ws3

# Open specific applications in floating mode
for_window [title="alsamixer"] floating enable border pixel 1
for_window [title="File Transfer*"] floating enable
for_window [class="mpv"] floating enable sticky enable
for_window [class="qt5ct"] floating enable sticky enable border normal

# Set shut down, restart and locking features
bindsym $mod+0 mode "$mode_system"
set $mode_system (e)xit, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Lock screen
bindsym $mod+minus exec --no-startup-id i3lock -c 121212

# Autostart applications
exec_always --no-startup-id startxrandr
exec_always --no-startup-id remaps
exec_always --no-startup-id tmuxdd
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
# exec --no-startup-id xwallpaper --maximize all-repos/wallpaper/wallpaper.jpg; picom -b
exec --no-startup-id killall -q pomo; pomo notify &
# exec --no-startup-id [ -z $(grep 'syncthing' <(ps -eo comm) | tr -d '\n') ] && syncthing --no-browser
# exec --no-startup-id xfce4-power-manager
exec --no-startup-id dunst

