ws-icon-2 = 3;ï‡»
ws-icon-3 = 4;ïƒƒ
ws-icon-4 = 5;ï€¾
ws-icon-5 = 6;ï€½
ws-icon-6 = 7;ï„‰
ws-icon-7 = 8;ï¼
ws-icon-8 = 9;ï‹†
ws-icon-9 = 10;ï†°
