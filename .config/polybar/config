[module/updates-repo]
type = custom/script

exec = "checkupdates 2> /dev/null | wc -l"
interval = 300

label = repo: %output%

[module/updates-aur]
type = custom/script

exec = "yay -Qua | wc -l"
interval = 300

label = aur: %output%

